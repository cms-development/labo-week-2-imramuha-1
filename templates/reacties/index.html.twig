{% extends 'base.html.twig' %}

{% block title %}Reacties index{% endblock %}

{% block body %}
    <h1>Reacties index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reacty in reacties %}
            <tr>
                <td>{{ reacty.id }}</td>
                <td>
                    <a href="{{ path('reacties_show', {'id': reacty.id}) }}">show</a>
                    <a href="{{ path('reacties_edit', {'id': reacty.id}) }}">edit</a>
                </td>
            </tr>
